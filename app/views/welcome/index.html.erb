<div class="container">
  <div class="row pt-5">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <p class="card-text">To Add a Author</p>
          <a href="/authors/new" class="btn btn-primary">Click Me</a>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <p class="card-text">To Add a Book</p>
          <a href="/books/new" class="btn btn-primary">Click Me</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row pt-5">
    <div class="col-sm-6">
      <h6>Authors</h6>
      <div class="card">
        <div class="card-body">
          <table>
            <thead>
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Date of birth</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @authors.each do |author| %>
              <tr>
                <td>
                  <%= author.first_name %>
                </td>
                <td>
                  <%= author.last_name %>
                </td>
                <td>
                  <%= author.date_of_birth %>
                </td>
                <td>
                  <%= link_to 'Show', author %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_author_path(author) %>
                </td>
                <td>
                  <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <h6>Books</h6>
      <div class="card">
        <div class="card-body">
          <table>
            <thead>
              <tr>
                <th>Book title</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <%= book.book_title %>
                </td>
                <td>
                  <%= link_to 'Show', book %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_book_path(book) %>
                </td>
                <td>
                  <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>